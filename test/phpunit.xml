<?xml version="1.0" encoding="UTF-8"?>
<!-- https://phpunit.readthedocs.io/en/latest/configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.1/phpunit.xsd" backupGlobals="false" colors="true">
  <coverage>
		<include>
			<directory suffix=".php">../src</directory>
		</include>
	</coverage>
  <testsuites>
    <testsuite name="Project Test Suite">
      <directory>.</directory>
    </testsuite>
  </testsuites>
</phpunit>